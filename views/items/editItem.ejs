<%- include ../layouts/header.ejs %>	
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/items/editItem/<%= id %>" method="post" name="form1">
	<div class="table__cotainer">
		<table class="center" width="25%" border="0">
			<tr> 
				<td>Name</td>
				<td><input class="input__design" type="text" name="name" id="name" value="<%= name %>" /></td>
			</tr>
			
			<tr> 
				<td>Quantity</td>
				<td><input class="input__design" type="text" name="qty" value="<%= qty %>" /></td>
			</tr>

			<tr> 
				<td>Amount</td>
				<td><input class="input__design" type="text" name="amount" value="<%= amount %>" /></td>
			</tr>

			<tr>
				<td></td>
				<td><input class="home__button width-100" type="submit" name="Submit" value="Edit" /></td>
			</tr>
		</table>
	</div>
	<input type="hidden" name="_method" value="PUT" />
</form>

<%- include ../layouts/footer.ejs %>
