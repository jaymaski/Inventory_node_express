<%- include layouts/header.ejs %>

<div>
	<% for(i = 0; i < Object.keys(category).length; i++) { %>
	<a href="/items/category" class="category_container" name="">
		<div class="category_upper">
			<img src='assets/images/logos/<%=Object.values(category_image)[i]%>'>
		</div>
		<div class="category_lower">
			<%= Object.values(category)[i] %>
		</div>
		<input type="hidden" id="category" name="category" value="<%= Object.values(category)[i] %>"/>
	</a>
	<% } %>
</div>
<div class="button__container">
	<a href="/items" class="home__button"> See All Items </a>
</div>

